@model LoginModel


<h2>Вход в приложение</h2>
<h3>Добрый день! Если хотите войти в приложение, то введите свои учётные данные для входа в систему</h3>
<form method="post" asp-controller="Account" asp-action="LoginUser">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Login"></label><br />
        <input asp-for="Login" />
        <span asp-validation-for="Login"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="RememberMe"></label>
        <input asp-for="RememberMe" />
    </div>
    <div>
        <input type="submit" value="Войти" />
    </div>

    <div>
        <br />
        <h3>Нет учётной записи? Тогда создайте её!</h3>
        <a asp-action="Register">Зарегистрироваться</a>
    </div>
</form>